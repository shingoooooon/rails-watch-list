
<div class="banner mb-5">
  <div class="container">
    <h1 class="text-left text-white pt-5">Watch list</h1>
    <h3>All of your favorites in one place.</h3>
  </div>
</div>

<div class="container">
  <div class="main-info d-flex">
    <div class="cards col-lg-9 col-md-6 col-sm-12">
      <% @lists.each do |list| %>
        <div class="card-category mb-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.photo.attached? ? cl_image_path(list.photo.key) : asset_url("No image.png") %>')">
          <%= link_to '', list_path(list), class:"card-link" %>
          <h3><%= list.name %></h3>
          <%= link_to list_path(list), method: :delete, class:"remove",  data: {confirm: "Are you sure?"}  do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="form text-white border ms-5 p-3 col-lg-3 col-md-6 col-sm-0">
      <h3 class="text-center mb-4">Add new list</h3>
      <%= render 'form' %>
    </div>
  </div>
</div>
