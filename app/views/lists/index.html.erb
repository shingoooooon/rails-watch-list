
<div class="banner">
  <div class="container">
    <h1 class="text-center text-muted pt-5">Movie lists</h1>
  </div>
</div>

<div class="container">
  <div class="main-info d-flex">
    <div class="cards col-lg-9">
      <% @lists.each do |list| %>
        <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.photo.attached? ? cl_image_path(list.photo.key) : "../../assets/images/No image.png" %>')">
          <%= link_to '', list_path(list), class:"card-link" %>
          <h3><%= list.name %></h3>
          <%= link_to list_path(list), method: :delete, class:"remove",  data: {confirm: "Are you sure?"}  do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="form border ms-5 col-lg-3">
      <h3>Add new list</h3>
      <%= render 'form' %>
    </div>
  </div>
</div>
